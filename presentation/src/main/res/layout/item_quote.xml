<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/colorPink"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="23\nNOV" />

    <TextView
        android:id="@+id/txt_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Freddy Lazo"
        app:layout_constraintBottom_toTopOf="@+id/txt_place"
        app:layout_constraintStart_toEndOf="@id/txt_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/txt_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/ic_hospital"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Domicilio"
        app:layout_constraintBottom_toTopOf="@+id/txt_time"
        app:layout_constraintStart_toStartOf="@id/txt_pet_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_pet_name" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="3:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_pet_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_place" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>